root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.yml]
indent_size = 2

[{composer.lock,.babelrc,.stylelintrc,.eslintrc,jest.config,*.bowerrc,*.json,*.js.map}]
indent_size=2

[*.csv]
indent_style=tab
tab_width=1

[*.less]
indent_size=2
